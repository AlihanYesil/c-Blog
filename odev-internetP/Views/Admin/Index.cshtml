@using odev_internetP.Models.Sınıflar
@model List<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Listesi</h2>
<br />

<table class="table table-bordered">

    <tr>
        <th>ID</th>
        <th>Başlik</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var x in Model)
    {


<tr>
    <td>@x.ID</td>
    <td>@x.Baslik</td>
    <td> <a href="/Admin/BlogSil/@x.ID" class="btn btn-danger"> Sil</a> </td>
    <td> <a href="/Admin/BlogGetir/@x.ID" class="btn btn-primary"> Güncelle</a> </td>
    <td> <a href="/Blog/BlogDetay/@x.ID" class="btn btn-info"> Detaylar</a> </td>
</tr>
    }
</table>
<a href="/Admin/YeniBlog/" class="btn btn-success"> Yeni Blog</a>


